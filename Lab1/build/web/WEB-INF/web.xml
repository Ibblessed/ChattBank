<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>com.ChattBank.controller.LoginServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AccountServlet</servlet-name>
        <servlet-class>com.ChattBank.controller.AccountServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AccountsServlet</servlet-name>
        <servlet-class>com.ChattBank.controller.AccountsServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Logout</servlet-name>
        <servlet-class>com.ChattBank.controller.Logout</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AccountLookupServlet</servlet-name>
        <servlet-class>com.ChattBank.controller.AccountLookupServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ManageAccounts</servlet-name>
        <servlet-class>com.ChattBank.controller.ManageAccounts</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Deposit</servlet-name>
        <servlet-class>com.ChattBank.controller.Deposit</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Withdrawal</servlet-name>
        <servlet-class>com.ChattBank.controller.Withdrawal</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/LoginServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AccountServlet</servlet-name>
        <url-pattern>/AccountServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AccountsServlet</servlet-name>
        <url-pattern>/AccountsServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Logout</servlet-name>
        <url-pattern>/Logout</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AccountLookupServlet</servlet-name>
        <url-pattern>/AccountLookupServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ManageAccounts</servlet-name>
        <url-pattern>/ManageAccounts</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Deposit</servlet-name>
        <url-pattern>/Deposit</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Withdrawal</servlet-name>
        <url-pattern>/Withdrawal</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>/Welcome.jsp</welcome-file>
    </welcome-file-list>
</web-app>
